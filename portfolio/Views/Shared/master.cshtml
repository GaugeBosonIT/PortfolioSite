  @*footer*@
  <div class="footer">
    <div class="row">
      <div class="threecol">
        <ul>
          <span class="fontWeightBold">Our work</span>
          <ul>
            <li><a href="#about">Methodology</a></li>
            <li><a href="#services">Services</a></li>
